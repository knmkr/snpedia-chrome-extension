{
    "manifest_version": 2,

    "name": "Search on SNPedia",
    "version": "0.0.1",
    "description": "Unofficial right-click search extension for SNPedia (https://www.snpedia.com)",

    "icons": {
        "16": "icons/icon_16x16.png",
        "48": "icons/icon_48x48.png",
        "128": "icons/icon_128x128.png"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    }
}
